@model IEnumerable<CMCS.Web.Models.Claim>

@{
    ViewData["Title"] = "My Claims";
}

<h2>Your Submitted Claims</h2>
<hr />

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (!Model.Any())
{
    <p>No claims submitted yet.</p>
}

else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Lecturer</th>
                <th>Month</th>
                <th>Year</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Total</th>
                <th>Status</th>
                <th>Submitted</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.LecturerName</td>
                    <td>@claim.Month</td>
                    <td>@claim.Year</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate</td>
                    <td>@claim.TotalAmount.ToString("F2")</td>
                    <td>@claim.Status</td>
                    <td>@claim.SubmittedDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="Create" class="btn btn-primary">Submit New Claim</a>
